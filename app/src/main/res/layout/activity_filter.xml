<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_filter"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp"
                >
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/linear_bottom_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/btn_filter_reset"
            android:layout_weight="3"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_winnus_reset_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/btn_filter_search"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:text="와인 검색하기"
            android:textAlignment="center"
            android:background="@color/main_gray"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toTopOf="@id/linear_bottom_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:background="@drawable/recycler_bottom_boarder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_filter_kind"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingVertical="10dp"
                    android:text="종류"
                    android:drawableRight="@drawable/ic_winnus_minus_24"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_filter_kind"
                    android:paddingTop="10dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingBottom="@dimen/row_left_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/recycler_bottom_boarder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_filter_taste"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingVertical="10dp"
                    android:text="맛"
                    android:drawableRight="@drawable/ic_winnus_minus_24"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/linear_filter_taste"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingBottom="@dimen/row_left_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="30dp"
                            android:text="당도"
                            android:textStyle="bold"
                            android:textColor="@color/main_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <SeekBar
                                android:layout_marginTop="3dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:tickMark="@drawable/seekbar_tick"
                                android:thumb="@drawable/seekbar_thumb"
                                android:progressDrawable="@drawable/seekbar_line"
                                android:id="@+id/seekBar_sugar_content"
                                style="@style/SeekBarWithoutDot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:progress="0"/>
                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.23" />

                            <TextView
                                android:layout_marginStart="-22dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar5"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_sugar_content"
                                android:text="드라이한"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_sugar_content"
                                android:text="무관"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginStart="-12dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar1"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_sugar_content"
                                android:text="보통"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_sugar_content"
                                android:text="달달한"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.59" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="30dp"
                            android:text="산도"
                            android:textStyle="bold"
                            android:textColor="@color/main_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <SeekBar
                                android:layout_marginTop="3dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:tickMark="@drawable/seekbar_tick"
                                android:thumb="@drawable/seekbar_thumb"
                                android:progressDrawable="@drawable/seekbar_line"
                                android:id="@+id/seekBar_acidity"
                                style="@style/SeekBarWithoutDot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:progress="0"/>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.23" />

                            <TextView
                                android:layout_marginStart="-12dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar6"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_acidity"
                                android:text="낮은"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_acidity"
                                android:text="무관"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginStart="-12dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar2"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_acidity"
                                android:text="보통"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_acidity"
                                android:text="높은"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.59" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="15dp"
                            android:text="타닌감"
                            android:textStyle="bold"
                            android:textColor="@color/main_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <SeekBar
                                android:layout_marginTop="3dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:tickMark="@drawable/seekbar_tick"
                                android:thumb="@drawable/seekbar_thumb"
                                android:progressDrawable="@drawable/seekbar_line"
                                android:id="@+id/seekBar_tannin"
                                style="@style/SeekBarWithoutDot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:progress="0"/>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.23" />

                            <TextView
                                android:layout_marginStart="-22dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar7"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_tannin"
                                android:text="부드러운"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_tannin"
                                android:text="무관"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginStart="-12dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar3"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_tannin"
                                android:text="보통"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_tannin"
                                android:text="떪은"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.59" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="15dp"
                            android:text="바디감"
                            android:textStyle="bold"
                            android:textColor="@color/main_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <SeekBar
                                android:layout_marginTop="3dp"
                                app:layout_constraintTop_toTopOf="parent"
                                android:tickMark="@drawable/seekbar_tick"
                                android:thumb="@drawable/seekbar_thumb"
                                android:progressDrawable="@drawable/seekbar_line"
                                android:id="@+id/seekBar_body"
                                style="@style/SeekBarWithoutDot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:progress="0"/>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.23" />

                            <TextView
                                android:layout_marginStart="-17dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar8"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_body"
                                android:text="가벼운"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_body"
                                android:text="무관"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginStart="-12dp"
                                app:layout_constraintStart_toEndOf="@id/guideline_seekbar4"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_body"
                                android:text="보통"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar_body"
                                android:text="무거운"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline_seekbar4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.59" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/recycler_bottom_boarder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_filter_bouquet"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingVertical="10dp"
                    android:text="향"
                    android:drawableRight="@drawable/ic_winnus_minus_24"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_filter_bouquet"
                    android:paddingTop="10dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingBottom="@dimen/row_left_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/recycler_bottom_boarder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_filter_food"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingVertical="10dp"
                    android:text="음식"
                    android:drawableRight="@drawable/ic_winnus_minus_24"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_filter_food"
                    android:paddingTop="10dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingBottom="@dimen/row_left_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/recycler_bottom_boarder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_filter_price"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingVertical="10dp"
                    android:text="가격"
                    android:drawableRight="@drawable/ic_winnus_minus_24"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/linear_filter_price"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="@dimen/row_left_margin"
                    android:paddingBottom="@dimen/row_left_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginBottom="@dimen/row_left_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_cal_non_use"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="직접계산"
                            android:textStyle="bold"
                            android:textColor="@color/main_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:textSize="15dp"
                            android:layout_marginStart="20dp"
                            android:id="@+id/edit_price_min"
                            android:inputType="numberDecimal"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/edit_box"
                            app:layout_constraintStart_toEndOf="@+id/tv_cal_non_use"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:hint="최소"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginStart="5dp"
                            android:id="@+id/tv_emoji1"
                            app:layout_constraintStart_toEndOf="@+id/edit_price_min"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="30dp"
                            android:text="~"
                            android:textStyle="bold"
                            android:textColor="@color/main_black"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:textSize="15dp"
                            android:layout_marginStart="5dp"
                            android:id="@+id/edit_price_max"
                            android:inputType="numberDecimal"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:background="@drawable/edit_box"
                            app:layout_constraintStart_toEndOf="@+id/tv_emoji1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:hint="최대"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_filter_price"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>